{
    "rules": {
        "indent": [
            1,
            "tab"
        ],
        "quotes": [
            1,
            "double"
        ],
        "linebreak-style": [
            1,
            "unix"
        ],
        "semi": [
            1,
            "never"
        ],
        "no-console": [
            0
        ],
        "no-unused-vars": [
            1
        ]
    },
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true
    },
    "globals" : {
        "Bem": true,
        "$": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "react"
    ]
}
